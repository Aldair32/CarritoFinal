<html>
<head>
</head>
<body>
    <form asp-controller="Marca" asp-action="grabar" method="post">

        <legend>Crear nuevo</legend>
        <div class="mb-3">
            <label for="txtcodigo" class="form-label">Codigo Marca</label>
            <input type="text" asp-for="CdMarca" id="txtcodigo" class="form-control" placeholder="Codigo Marca">
        </div>
        <div class="mb-3">
            <label for="txtdescripcion" class="form-label">Descripcion</label>
            <input type="text" asp-for="Descripcion" id="txtdescripcion" class="form-control" placeholder="Descripcion">
        </div>
        <div class="mb-3">
            <label for="cboactivo" class="form-label">Estado</label>
            <select id="cboactivo" class="form-select" asp-for="Activo">
                <option value="True">Activo</option>
                <option value="False">Inactivo</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary" value="Grabar">Grabar</button>
    </form>
</body>
</html>
