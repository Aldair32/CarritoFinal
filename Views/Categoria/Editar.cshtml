<html>
<head>
</head>
<body>
    <form asp-controller="Categoria" asp-action="editarCategoria" method="post">

        <legend>Editar</legend>
        <div class="mb-3">

            <input type="hidden" asp-for="CdCategoria" id="txtcodigo" class="form-control" placeholder="Codigo Categoria">
        </div>
        <div class="mb-3">
            <label for="txtdescripcion" class="form-label">Descripcion</label>
            <input asp-for="Descripcion" id="txtdescripcion" class="form-control" placeholder="Descripcion">
        </div>      
        <div class="mb-3">
            <label for="cboactivo" class="form-label">Estado</label>
            <select id="cboactivo" class="form-select" asp-for="Activo">
                <option value="True">Activo</option>
                <option value="False">Inactivo</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Modificar</button>
    </form>
</body>
</html>