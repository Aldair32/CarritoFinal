@{
}
<html>
<head>
</head>
<body>
    <form asp-controller="Producto" asp-action="grabar" method="post">

        <legend>Crear nuevo</legend>
        <div class="mb-3">
            <label for="txtcodigo" class="form-label">Codigo Producto</label>
            <input type="text" asp-for="CdProducto" id="txtcodigo" class="form-control" placeholder="Codigo Producto">
        </div>
        <div class="mb-3">
            <label for="txtnombre" class="form-label">Nombre</label>
            <input type="text" asp-for="Nombre" id="txtnombre" class="form-control" placeholder="Nombre">
        </div>
        <div class="mb-3">
            <label for="txtdescripcion" class="form-label">Descripcion</label>
            <input type="text" asp-for="Descripcion" id="txtdescripcion" class="form-control" placeholder="Descripcion">
        </div>
        <div class="mb-3">
            <label for="txtmarca" class="form-label">Marca</label>
            <input type="text" asp-for="CdMarca" id="txtmarca" class="form-control" placeholder="Marca">
        </div>
        <div class="mb-3">
            <label for="txtcategoria" class="form-label">Categoria</label>
            <input type="text" asp-for="CdCategoria" id="txtcategoria" class="form-control" placeholder="Categoria">
        </div>
        <div class="mb-3">
            <label for="txtprecio" class="form-label">Precio</label>
            <input type="text" asp-for="Precio" id="txtprecio" class="form-control" placeholder="Precio">
        </div>
        <div class="mb-3">
            <label for="txtstock" class="form-label">Stock</label>
            <input type="text" asp-for="Stock" id="txtstock" class="form-control" placeholder="Stock">
        </div>
        <div class="mb-3">
            <label for="cboactivo" class="form-label">Estado</label>
            <select id="cboactivo" class="form-select" asp-for="Activo">
                <option value="True">Activo</option>
                <option value="False">Inactivo</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary" value="Grabar">Grabar</button>
    </form>
</body>
</html>
