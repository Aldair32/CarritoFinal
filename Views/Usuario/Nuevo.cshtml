@{
}
<html>
<head>
</head>
<body>
<form asp-controller="Usuario" asp-action="grabar" method="post">

        <legend>Crear nuevo</legend>
        <div class="mb-3">
            <label for="txtcodigo" class="form-label">Codigo Cliente</label>
            <input type="text" asp-for="CdUsuario" id="txtcodigo" class="form-control" placeholder="Codigo Cliente">
        </div>
        <div class="mb-3">
            <label for="txtnombres" class="form-label">Nombres</label>
            <input type="text" asp-for="Nombres" id="txtnombres" class="form-control" placeholder="Nombres">
        </div>
        <div class="mb-3">
            <label for="txtapellidos" class="form-label">Apellidos</label>
            <input type="text" asp-for="Apellidos" id="txtapellidos" class="form-control" placeholder="Apellidos">
        </div>
        <div class="mb-3">
            <label for="txtcorreo" class="form-label">Correo</label>
            <input type="text" asp-for="Correo" id="txtcorreo" class="form-control" placeholder="Correo">
        </div>
        <div class="mb-3">
            <label for="cboactivo" class="form-label">Estado</label>
            <select id="cboactivo" class="form-select" asp-for="Activo">
                <option value="True">Activo</option>
                <option value="False">Inactivo</option>
            </select>
        </div>       
        
        <button type="submit" class="btn btn-primary" value="Grabar">Grabar</button>
</form>
</body>
</html>